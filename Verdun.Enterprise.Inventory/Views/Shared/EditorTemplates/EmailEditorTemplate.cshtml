@model string

<!-- asp.net mvc core TextBox, email pattern from online -->
<div class="k-input k-textbox">
        @(Html.Kendo().TextBoxFor(m=>m)
            .HtmlAttributes(new { type = "email",  validationMessage = "Email format is not valid", style = "width: 100%"
            , pattern= @"^([\w-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$"
            })
        )
 </div>
