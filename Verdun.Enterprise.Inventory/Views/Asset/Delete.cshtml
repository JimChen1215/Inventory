@model AssetViewModel

@{
    ViewData["Title"] = "Delete";
}

<legend>Delete Asset</legend>

<h3>Are you sure you want to delete this asset?</h3>
<div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <dl class="row">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.AssetType)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.AssetTypeName)
                    @*<select asp-for="AssetTypeId" class="form-control" asp-items="ViewBag.AssetTypeId"></select>*@
                </dd>

                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.AssetName)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.AssetName)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Brand)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.AssetDescription)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.AssetDescription)
                </dd>

                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.QuantityOnHand)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.QuantityOnHand)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Notes)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Notes)
                </dd>
            </dl>
        </div>
        <div class="col-md-4">
            @await Html.PartialAsync("_AssetTypeAttributesDetails", Model.AssetTypeAttributeList)
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AssetId" />
        <input type="submit" value="Delete Asset" class="btn btn-danger" /> |        
        <a asp-action="Details" asp-route-assetId="@Model.AssetId">Cancel - Back to Asset</a> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
